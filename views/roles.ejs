<!doctype html>
<html lang="ru">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Роли — ABU Cargo</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="nav">
    <div class="container">
      <a class="brand" href="/dashboard">ABU Cargo</a>
      <div class="nav-right">
        <span><strong><%= user.username %></strong> (<%= user.role %>)</span>
      </div>
    </div>
  </nav>

  <main class="container">
    <div class="card">
      <h2>Роли</h2>
      <form method="post" action="/roles" style="margin-bottom:12px;">
        <input name="name" placeholder="admin" required />
        <input name="description" placeholder="описание" />
        <button class="btn" type="submit">Добавить роль</button>
      </form>

      <table class="table">
        <thead><tr><th>ID</th><th>Имя</th><th>Описание</th><th>Действия</th></tr></thead>
        <tbody>
          <% roles.forEach(r => { %>
            <tr>
              <td><%= r.id %></td>
              <td><%= r.name %></td>
              <td><%= r.description %></td>
              <td>
                <form method="post" action="/roles/<%= r.id %>/delete" style="display:inline;">
                  <button class="btn-link" type="submit" onclick="return confirm('Удалить роль?');">Удал.</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </main>
</body>
</html>
