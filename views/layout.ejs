<!doctype html>
<html lang="ru">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= title || 'ABU Cargo' %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="nav">
    <div class="container">
      <a class="brand" href="/dashboard">ABU Cargo</a>
      <% if(user){ %>
        <div class="nav-right">
          <span><strong><%= user.username %></strong> (<%= user.role %>)</span>
          <a href="/dashboard">Панель</a>
          <a href="/dashboard/users">Пользователи</a>
          <a href="/roles">Роли</a>
          <form method="post" action="/logout" style="display:inline;">
            <button class="btn-link" type="submit">Выйти</button>
          </form>
        </div>
      <% } %>
    </div>
  </nav>

  <main class="container">
    <%- body %>
  </main>

  <script src="/js/main.js"></script>
</body>
</html>
